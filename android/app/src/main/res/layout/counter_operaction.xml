<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:id="@+id/counterWidget">

        <TextView
            android:id="@+id/weeksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="12"
            android:textSize="12sp"
            android:textColor="#8AB17D"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weeksCount"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="weeks"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:textStyle="italic"
            android:typeface="sans"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:id="@+id/counterDayWidget"
        android:layout_toEndOf="@+id/counterWidget">

        <TextView
            android:id="@+id/daysCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="88"
            android:textSize="12sp"
            android:textColor="#8AB17D"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/daysCount"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="days"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:textStyle="italic"
            android:typeface="sans"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/counterDayWidget">

        <TextView
            android:id="@+id/operationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="24 czerwca 2021"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>